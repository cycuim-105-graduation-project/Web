           = simple_form_for(resource, as: resource_name, url: new_session_path(resource_name)) do |f|
            .header.header-primary.text-center
              h4.card-title
                | Log in
              .social-line
                a.btn.btn-just-icon.btn-simple[href="#pablo"]
                  i.fa.fa-facebook-square
