              .input-group
                span.input-group-addon
                  i.material-icons
                    | email
                = f.input_field :email, label: false, placeholder: '登入信箱', required: false, autofocus: true, class: 'form-control'

              .input-group
                span.input-group-addon
                  i.material-icons
                    | lock_outline
                = f.input_field :password, label: false, placeholder: '登入密碼', required: false, class: 'form-control'

              .checkbox
                = f.input_field :remember_me, label: false,  class: 'checkbox' ,:as => :boolean, :label => false, :inline_label => true if devise_mapping.rememberable?

              .form-actions.text-center.form-actions
                = f.button :submit, "Log in"
